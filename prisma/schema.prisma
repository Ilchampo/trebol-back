generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id                      Int       @id @default(autoincrement())
  name                    String
  logoUrl                 String    @map("logo_url")
  minimumSearchPercentage Float     @map("minimum_search_percentage")
  maxInvestorsLevels      Int       @map("max_investors_levels")
  companies               Company[]

  @@map("clients")
}

model Company {
  id       Int     @id @default(autoincrement())
  clientId Int     @map("client_id")
  client   Client  @relation(fields: [clientId], references: [id])
  name     String
  code     String  @unique
  shares   Share[]

  @@index([code])
  @@map("companies")
}

model Investor {
  id     Int          @id @default(autoincrement())
  name   String
  type   InvestorType
  code   String
  shares Share[]

  @@map("investors")
}

model Share {
  id              Int        @id @default(autoincrement())
  companyId       Int        @map("company_id")
  company         Company    @relation(fields: [companyId], references: [id])
  investorId      Int        @map("investor_id")
  investor        Investor   @relation(fields: [investorId], references: [id])
  sharePercentage Float      @map("share_percentage")
  level           Int
  documents       Document[]

  @@map("shares")
}

model Document {
  id       Int      @id @default(autoincrement())
  shareId  Int      @map("share_id")
  share    Share    @relation(fields: [shareId], references: [id])
  fileName String   @map("file_name")
  fileType FileType @map("file_type")
  fileData Bytes    @map("file_data")

  @@map("documents")
}

enum InvestorType {
  Person
  Company
}

enum FileType {
  PDF
  PNG
}
